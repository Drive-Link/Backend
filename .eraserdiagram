 entity-relationship-diagram

Passengers [icon: users] {
    id string pk
    firstName string
    lastName string
    country string
    phoneNumber string
    email string
    state string
    city string
}

Profile [icon: user] {
    id string pk 
    shortBio string
    profilePic string
    role string 
    passengerId integer fk
}

TrustedBuddy [icon: home] {
    id string pk
    name timestamp
    email string
    phoneNumber string
    profileId integer fk
}

CarDetails [icon: car] {
    id integer pk
    carName string
    carBrand string
    type string
    plateNumber string
    profileId integer fk
}

CardDetails [icon: payment] {
    id integer pk
    cardNumber number
    expireDate timestamp
    cvv number
    profileId integer fk
}

Passengers.id > Profile.passengerId
Profile.id > CardDetails.profileId 
Profile.id > CarDetails.profileId
Profile.id > TrustedBuddy.profileId


